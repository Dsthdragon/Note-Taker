<Page x:Class="start_up.Pages.StartUp"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:start_up.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StartUp">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <TextBox Height="Auto" Name="noteTextBox" FontSize="20" TextWrapping="Wrap" AcceptsReturn="True"></TextBox>
        <Button Grid.Row="1" Background="Crimson" FontSize="25" Foreground="wHITE" Click="Button_Click">SAVE</Button>
    </Grid>
</Page>
